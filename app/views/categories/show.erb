<!DOCTYPE html>
    <head> 
        <link rel="stylesheet" href="/stylesheets/layout.css">
    </head>

    <body>
    <div class="wrapper">
        <header>
            <h3> <%= @category.name %> </h3>
        </header>
        <div class="content">
            <ol>
                <% @category.lists.sort.uniq.each do |list| %>
                <li><a href="/lists/<%= list.id %>"><%= list.name %></a></li>
                <% end %>
            </ol>
        </div>
        <br>
        <br>
        <footer>
            <a href="/" class="button">Home</a>
            <a href="/logout" class="button">Log Out</a>
        </footer>
    </div>
    </body>
</html>