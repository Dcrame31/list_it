<% end %>



<!DOCTYPE html>
    <head>
    </head>

    <body>
        <h1><%= @list.name %></h1>
        <p><% @list.contents.each do |content| %></p>
        <li> <%= content.name %>  </input></li>
        <% end %>
        <p>List created on: <%= @list.created_at %></p>
        </br>
        <p>Category: <% @list.categories.uniq.each do |category| %></p>
        <li><a href="/categories/<%= category.id %>"><%= category.name.capitalize %></a> </li>
        <% end %>  
        </br>
        <p><a href="/lists/<%= @list.id %>/edit"><button type="button">Edit</button></a> <a href="/lists/<%= @list.id %>/delete"><button type="button">Delete</button></a></p>

        <p><a href="/">Home</a></p>
